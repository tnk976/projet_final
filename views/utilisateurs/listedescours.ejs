<!doctype html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>

    <% include ../partials/navConnecte %>


        <div class="container text-center">
            <h1 class="my-5">Mes réservations</h1>
            <a href="/ateliers">Retour à la liste des Ateliers</a>

            <table class="col-lg-8 table table-bordered table-striped mt-5">
                <thead>
                    <tr>
                        <th scope="col">Titre</th>
                        <th scope="col">Contenu</th>
                        <th scope="col">Date</th>
                        <th scope="col">Horaire de début</th>
                        <th scope="col">Durée (en minutes)</th>
                        <th scope="col">Places disponibles</th>
                        <th scope="col">Places réservées</th>
                        <th scope="col">Prix (€)</th>
                        <th scope="col">Image</th>
                        <th scope="col">Annuler la réservation</th>

                    </tr>
                </thead>
                <tbody>

                    <% reservation.forEach(function(element) {%>
                        <% if(session.userId == element.id_particulier[0]._id) {%>
                            <tr>
                                <td>
                                    <%= element.id_atelier[0].titre%>
                                </td>
                                <td>
                                    <%= element.id_atelier[0].contenu%>
                                </td>
                                <td>
                                    <%= (new Date(element.id_atelier[0].date)).getDate() %> /
                                        <%= (new Date(element.id_atelier[0].date)).getMonth()+1 %> /
                                            <%= new Date(element.id_atelier[0].date).getFullYear() %>
                                </td>
                                <td>
                                    <%= element.id_atelier[0].horaire_debut %>
                                </td>
                                <td>
                                    <%= element.id_atelier[0].duree%>
                                </td>
                                <td>
                                    <%= element.id_atelier[0].places_dispo%>
                                </td>
                                <td>
                                    <%= element.id_atelier[0].places_reservees%>
                                </td>
                                <td>
                                    <%= element.id_atelier[0].prix%>
                                </td>
                                <td>
                                    <img class="w-25" src="<%= element.id_atelier[0].image %>">
                                </td>
                                
                                <td>
                                    <a type="button" class="btn btn-light bg-transparent" href="/reservations/remove/<%=element._id %>">
                                        <i class="text-danger fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>

                            <%};})%>

                </tbody>
            </table>

        </div>


        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
</body>

</html>